generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Share {
  id           String   @id @default(uuid())
  title        String
  summary      String
  keyPoints    String[] @default([])
  previewText  String
  selectedMessages Json[]
  options      Json?
  characterCount Int     @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([createdAt])
  @@map("shares")
}
